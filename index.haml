!!! 5
%html
  %head
    %title PEGedit
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %link(rel="stylesheet" href="./css/foundation.css")
    %link(rel="stylesheet" href="./css/style.css")

  %body
    .row

      / Left panel
      .large-6.columns.panel#left-panel
        %nav.top-bar{"data-topbar" => "", :role => "navigation"}
          %ul.title-area
            %li.name
              %h1
                %a{:href => "#"} My Site
            / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
            %li.toggle-topbar.menu-icon
              %a{:href => "#"}
                %span Menu
          %section.top-bar-section
            / Right Nav Section
            %ul.button-group.right
              %li                 
                %a#peg-zoom-out.button(href="#")-
              %li
                %a#peg-zoom-in.button(href="#") +
              %li.divider
              %li.active.has-form
                %a#peg_editor_settings.button{:href => "#"} Editor Settings
              
            / Left Nav Section
            %ul.left
              %li.has-dropdown.has-form
                %a{:href => "#"} Sample Grammars
                %ul.dropdown
                  %li
                    %a{:href => "#"} First link in dropdown
                  %li.active
                    %a{:href => "#"} Active link in dropdown
              %li.active
                %a#build_parser_btn.button{:href => "#"} Build Parser &raquo;

        #editor
      
      / Right panel
      .large-6.columns.panel#right-panel
        
        / Parse string editor
        .row
          .large-12.columns
            %nav.top-bar(data-topbar role="navigation")
              %ul.title-area
                %li.name
                  %h1
                    %a(href="#")Parse string editor
                %li.toggle-topbar.menu-icon
                  %a(href="#")
                    %span Menu 
              %section.top-bar-section
                %ul.button-group.right
                  %li                 
                    %a#source-zoom-out.button(href="#")-
                  %li
                    %a#source-zoom-in.button(href="#") +
                  %li.divider
                  %li.active.has-form
                    %a#peg_editor_settings.button{:href => "#"} Editor Settings
                %ul.left
                  %li.active
                    %a#parse_btn.button(href="#") Parse &raquo;
            #output

        / Parse tree view
        .row
          .large-12.columns
            %p
              %nav.top-bar(data-topbar role="navigation")
                %ul.title-area
                  %li.name
                    %h1
                      %a(href="#")Parse tree view
                  %li.toggle-topbar.menu-icon
                    %a(href="#")
                      %span Menu 
                %section.top-bar-section
                  %ul.button-group.right
                    %li                 
                      %a.button(href="#")-
                    %li
                      %a.button(href="#") +
                    %li.divider
                    %li.active.has-form
                      %a#tree-reset.button{:href => "#"} Reload
              #treediv

    %script(src="//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js")          
    %script(src="./js/peg-0.8.0.js")
    %script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    %script(src="./js/foundation/foundation.js")
    %script(src="./js/foundation/foundation.equalizer.js")
    %script(src="./js/doc-ready.js")
    %script(src="./js/d3.min.js")
    %script(src="./js/do-tree.js")

  -#
    #left
      %ul.nav.nav-tabs
        %li.active(role = "presentation")
          %a(href = "#")
            PEG Editor
          %li(role = "presentation")
            %a#peg_editor_settings(href = "#")
              %span.glyphicon.glyphicon-cog
                Settings
          %li(role = "presentation")
            %a#build_parser_btn(href = "#")
              %span.glyphicon.glyphicon-ok
                Build Parser
          %li(role = "presentation")
            %a(href = "#")
              %label 
                %input#auto-build(type = "checkbox")
                Auto-build parser on change?
      #editor
      .btn-group.zoom-btn-group.bottom.half-right(role="group")
        %button#peg-zoom-out.btn.btn-default(type="button" data-toggle="tooltip" data-placement="bottom" title="Zoom out")
          %span.glyphicon.glyphicon-zoom-out
        %button#peg-reset.btn.btn-default(type="button" data-toggle="tooltip" data-placement="bottom" title="Reset zoom")
          %span.glyphicon.glyphicon-repeat
        %button#peg-zoom-in.btn.btn-default(type="button" data-toggle="tooltip" data-placement="bottom" title="Zoom in")
          %span.glyphicon.glyphicon-zoom-in
    #right
      #top_right
        %ul.nav.nav-tabs
          %li.active(role="presentation")
            %a(href="#")
              Parse string
          %li(role="presentation")
            %a#parse_btn(href="#")
              %span.glyphicon.glyhpicon-play(aria-hidden="true")
                Parse
        #output
      #bottom_right
        %ul.nav.nav-tabs
          %li.active(role="presentation")
            %a(href="#")
              Parse tree
        #treediv
        .btn-group.zoom-btn-group.bottom.half-right(role="group")
          %button#tree-zoom-out.btn.btn-default(type="button" data-toggle="tooltip" data-placement="bottom" title="Zoom out")
            %span.glyphicon.glyphicon-zoom-out
          %button#tree-reset.btn.btn-default(type="button" data-toggle="tooltip" data-placement="bottom" title="Reset zoom")
            %span.glyphicon.glyphicon-repeat
          %button#tree-zoom-in.btn.btn-default(type="button" data-toggle="tooltip" data-placement="bottom" title="Zoom in")
            %span.glyphicon.glyphicon-zoom-in
    %script(src="//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js")          
    %script(src="./js/peg-0.8.0.js")
    %script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    %script(src="./js/bootstrap.min.js")
    %script(src="./js/doc-ready.js")
    %script(src="./js/d3.min.js")
    %script(src="./js/do-tree.js")


