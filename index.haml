!!! 5
%html
  %head
    %title PEGedit
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %link(rel="stylesheet" href="./css/foundation.css")
    %link(rel="stylesheet" href="./css/style.css")

  %body
    .row

      / Left panel
      .large-6.columns.panel#left-panel
        %nav.top-bar(data-topbar role="navigation")
          %ul.title-area
            %li.name
              %h1
                %a{:href => "#"} PEG.js editor
            / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
            %li.toggle-topbar.menu-icon
              %a{:href => "#"}
                %span Menu
          %section.top-bar-section
            / Right Nav Section
            %ul.button-group.right
              %li                 
                %a#peg-zoom-out.button(href="#")-
              %li
                %a#peg-zoom-in.button(href="#") +
              %li.divider
              %li.active.has-form
                %a#peg_editor_settings.button{:href => "#"} Editor Settings
              
            / Left Nav Section
            %ul.left
              %li.has-dropdown.has-form
                %a(href="#" data-dropdown="drop") Sample Grammars
                %ul#drop.dropdown(data-dropdown-content)
                  %li.active
                    %a#sample_one{:href => "#"} Simple expressions
                  %li
                    %a#left-assoc{:href => "#"} Left-associative refactored
              %li.active
                %a#build_parser_btn.button{:href => "#"} Build Parser &raquo;

        #editor
      
      / Right panel
      .large-6.columns.panel#right-panel
        
        / Parse string editor
        .row
          .large-12.columns
            %nav.top-bar(data-topbar role="navigation")
              %ul.title-area
                %li.name
                  %h1
                    %a(href="#")Parse string editor
                %li.toggle-topbar.menu-icon
                  %a(href="#")
                    %span Menu 
              %section.top-bar-section
                %ul.button-group.right
                  %li                 
                    %a#source-zoom-out.button(href="#")-
                  %li
                    %a#source-zoom-in.button(href="#") +
                  %li.divider
                  %li.active.has-form
                    %a#peg_editor_settings.button{:href => "#"} Editor Settings
                %ul.left
                  %li.active
                    %a#parse_btn.button(href="#") Parse &raquo;
            #output

        / Parse tree view
        .row
          .large-12.columns
            %p
              %nav.top-bar(data-topbar role="navigation")
                %ul.title-area
                  %li.name
                    %h1
                      %a(href="#")Parse tree view
                  %li.toggle-topbar.menu-icon
                    %a(href="#")
                      %span Menu 
                %section.top-bar-section
                  %ul.button-group.right
                    %li                 
                      %a.button(href="#")-
                    %li
                      %a.button(href="#") +
                    %li.divider
                    %li.active.has-form
                      %a#tree-reset.button{:href => "#"} Reload
              #treediv

    %script(src="//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js")          
    %script(src="./js/peg-0.8.0.js")
    %script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    %script(src="./js/foundation.min.js")
    %script(src="./js/doc-ready.js")
    %script(src="./js/d3.min.js")
    %script(src="./js/do-tree.js")
    %script $('document').foundation();

